
<div class="main-container bg-gradient-to-b from-slate-200 to-slate-400">
  <div class="login">
    <h2 id="login-title" class="title text-2xl">Login:</h2>
    <form id="login-form" class="login-form">
      <label for="email-login">Email:</label>
      <input
        type="text"
        id="email-login"
        class="py-3 px-4 block w-80 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"
      />
      <label for="password-login">Password:</label>
      <input
        type="password"
        id="password-login"
        class="py-3 px-4 block w-80 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"
      />
      <div>
        <button
          type="submit"
          class="py-3 px-4 w-24 inline-flex justify-center items-center gap-2 rounded-md bg-blue-100 border border-transparent font-semibold text-blue-500 hover:text-white hover:bg-blue-500 focus:outline-none focus:ring-2 ring-offset-white focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm"
        >Login</button>
      </div>
      <a href="/signup"><button
          type="button"
          class="py-3 px-4 w-24 inline-flex justify-center items-center gap-2 rounded-md bg-blue-100 border border-transparent font-semibold text-blue-500 hover:text-white hover:bg-blue-500 focus:outline-none focus:ring-2 ring-offset-white focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm"
        >Signup</button></a>



    </form>
  </div>
</div>

<!-- javascript file-->
<script src="js/login.js"></script>