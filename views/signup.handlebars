<div class="main-container bg-gradient-to-b from-slate-200 to-slate-400">
  <div class="signup">
  <h2 class="title pb-4">create new account:</h2>
  <form class="signup-form">
    <label for="email-signup">email:</label>
    <input
      type="text"
      id="email-signup"
      class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"
    />
    <label for="password-signup">password:</label>
    <input type="password" id="password-signup" class="py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"/>
    <div>
      <button
        type="submit"
        class="py-[.688rem] w-24 px-4 inline-flex justify-center items-center gap-2 rounded-md border-2 border-gray-200 font-semibold text-blue-500 hover:text-white hover:bg-blue-500 hover:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:border-gray-700 dark:hover:border-blue-500"
      >signup</button>
    </div>
  </form>
</div>

</div>

