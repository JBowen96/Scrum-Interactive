<div class="main-container">
  <div class="signup">
    <h2 class="title text-2xl">Create New Account:</h2>
    <form class="signup-form">
      <label for="email-signup">Email:</label>
      <input
        type="text"
        id="email-signup"
        class="py-3 px-4 block w-64 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"
      />
      <label for="password-signup">Password:</label>
      <input
        type="password"
        id="password-signup"
        class="py-3 px-4 block w-64 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500"
      />
      <div class="buttons pb-8">
        <button
          type="submit"
          class="py-3 px-4 w-24 inline-flex justify-center items-center gap-2 rounded-md bg-green-100 border border-transparent font-semibold text-green-500 hover:text-white hover:bg-green-500 focus:outline-none focus:ring-2 ring-offset-white focus:ring-green-500 focus:ring-offset-2 transition-all text-sm"
        >Create</button>
        <a href="/login"><button
          type="button"
          class="py-3 px-4 w-24 inline-flex justify-center items-center gap-2 rounded-md bg-red-100 border border-transparent font-semibold text-red-500 hover:text-white hover:bg-red-500 focus:outline-none focus:ring-2 ring-offset-white focus:ring-red-500 focus:ring-offset-2 transition-all text-sm"
        >Back</button></a>
      </div>
    </form>
  </div>
</div>

<!-- javascript file-->
<script src="js/signup.js"></script>